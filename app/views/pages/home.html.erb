        <a href="#" class="btn btn-primary card-btn">Acacia wands</a>
      </div>
    </div>
    <div class="card bg-dark mx-auto card-home" data-aos="fade-down" style="width: 18rem; heigh: 50vh;">
      <div class="card-header bg-secondary">
        Featured
      </div>
      <%= image_tag 'https://cdn.shopify.com/s/files/1/2659/9670/products/ww11_250x250@2x.jpg?v=1643313092', heigh: '100', width:'80' , class:'card-img-top' %>
