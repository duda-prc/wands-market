      <div class="card-header bg-dark">
        Woods
      </div>
      <%= image_tag 'https://static.wixstatic.com/media/70530e_01060a29e5f849c1bf0ff5d67073d57a~mv2.jpg/v1/fill/w_498,h_498,al_c,q_85,usm_0.66_1.00_0.01/70530e_01060a29e5f849c1bf0ff5d67073d57a~mv2.jpg', heigh: '100', width:'80' , class:'card-img-top' %>
